# ملف المتغيرات البيئية - Environment Variables
# انسخ هذا الملف إلى .env وأدخل القيم الحقيقية
# Copy this file to .env and enter real values

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_AUTH_DOMAIN=your_auth_domain_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here

# Database Configuration
DATABASE_URL=your_database_url_here
DATABASE_NAME=mybus_production

# Security Keys
APP_SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
PUSH_NOTIFICATION_KEY=your_push_notification_key_here
SMS_API_KEY=your_sms_api_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# App Configuration
APP_NAME=MyBus
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
DEBUG_MODE=false

# Security Settings
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_HOURS=24
PASSWORD_MIN_LENGTH=8
ENABLE_TWO_FACTOR_AUTH=true

# File Upload Settings
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Monitoring and Logging
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=info

# Third Party Services
ANALYTICS_API_KEY=your_analytics_key_here
CRASH_REPORTING_API_KEY=your_crash_reporting_key_here

# Backup Configuration
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_LOCATION=cloud_storage

# Cache Configuration
CACHE_TTL_MINUTES=30
CACHE_MAX_SIZE_MB=100

# Network Configuration
API_TIMEOUT_SECONDS=30
MAX_CONCURRENT_REQUESTS=10

# Development Settings (only for development environment)
DEV_ENABLE_DEBUG_LOGS=true
DEV_MOCK_EXTERNAL_APIS=false
DEV_BYPASS_AUTH=false
